package refactoring.objects;

public class Pig extends Object {

	private int life;

	public Pig() {
		super();
		life = 1;
	}

	public Pig(int life) {
		super();
		this.life = life;
	}
	
	public void init(){
        pigX = Math.random() * 500 + 200; // position aléatoire pour le cochon
        pigY = 480;
	}
	

	public int getLife() {
		return life;
	}

	public void setLife(int life) {
		this.life = life;
	} 
	
}
