package refactoring.objects;

import refactoring.point.Point;

public class Pig extends Object {

	private int life;

	public Pig() {
		super();
		life = 1;
		this.isGravitational = false;
	}

	public Pig(int life, boolean isGravitational) {
		super();
		this.life = life;
		this.isGravitational = isGravitational;
	}
	
	public void init(){
		this.position = new Point( (int)Math.random() * 500 + 200, 480 );
	}
	

	public int getLife() {
		return life;
	}

	public void setLife(int life) {
		this.life = life;
	} 
	
}
